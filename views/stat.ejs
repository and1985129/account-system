<% include header.ejs %>
  <div class="container">
    <div class="text-right">
      <a href="/list" class="btn btn-default">详情</a>
      <a href="/record" class="btn btn-default">记账</a>
    </div>
    <table class="table table-striped table-bordered table-condensed">
      <caption><h3 class="text-info'">记账详情</h3></caption>
      <thead>
        <tr>
          <th class="text-right">科目</th>
          <th>金额</th>
          <th>记录数</th>
        </tr>
      </thead>
      <tbody>
        <%
          records.forEach(function(record, index) {
        %>
          <tr>
            <td class="text-right"><%= records.recordItem %></td>
            <td><%= record.amount %></td>
            <td><%= record.count %></td>
          </tr>
      <%}) %>
      </tbody>
    </table>
  </div>
<% include footer.ejs %>